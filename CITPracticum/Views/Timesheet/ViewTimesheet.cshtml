<script>
    // JavaScript for 'Select All' functionality
    document.addEventListener('DOMContentLoaded', function () {
        const selectAllCheckbox = document.getElementById('select-all');
        selectAllCheckbox.addEventListener('change', function () {
            // Use the .accordion-item class to target all checkboxes within each accordion item
            const checkboxes = document.querySelectorAll('#timesheetAccordion .accordion-item .form-check-input');
            checkboxes.forEach(function (checkbox) {
                // The .stopPropagation() method should be called on the click event, not here
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>