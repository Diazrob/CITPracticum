@model JobPosting

@{
    ViewData["Title"] = "Job Postings";
    ViewData["CurrentPage"] = "Job Postings > Delete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Are you sure you want to delete this job posting?</h1>
        <hr />
        <form method="post" asp-action="Delete" enctype="multipart/form-data">
            <div class="form-group">
                <label><b>Job Title</b></label>
                <p>@Model.JobTitle</p>
            </div>
            <div class="form-group">
                <label><b>Job Description</b></label>
                <p>@Model.JobDescription</p>
            </div>
            <div class="form-group">
                <label><b>Deadline</b></label>
                <p>@Model.Deadline</p>
            </div>
            <div class="form-group">
                <label><b>Company Name</b></label>
                <p>@Model.Company</p>
            </div>
            <div class="form-group">
                <label><b>Payment Type</b></label>
                <p>@Model.PaymentCategory</p>
            </div>
            <div class="form-group">
                <label><b>Location</b></label>
                <p>@Model.Location</p>
            </div>
            <div class="form-group">
                <label><b>Link</b></label>
                <p>@Model.Link</p>
            </div>
        </form>
        <hr />
        <div class="form-group">
            <form action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                <a class="btn btn-outline-secondary float-right" asp-controller="JobPosting" asp-action="Index">Cancel</a>
            </form>
        </div>
    </div>
</div>