@model IEnumerable<JobPosting>

<style>
    /* Custom styles for the title underline */
    .title-underline {
        width: 100px;
        height: 4px;
        background-color: #007bff; /* Bootstrap primary color */
        margin: 0 auto;
    }
    /* Styles for the tab navigation */
    .nav-tabs .nav-link.active {
        font-weight: bold;
        border-color: #007bff;
        border-bottom: 4px solid #007bff;
    }
    /* Additional custom styles can go here */
</style>

<section class="py-5 text-center container">
    <div class="row py-lg-2">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Job Postings</h1>
            <div class="title-underline"></div> <!-- Blue underline element -->
            <ul class="nav nav-tabs justify-content-center mt-3" id="jobTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="job-posts-tab" data-toggle="tab" href="#job-posts" role="tab" aria-controls="job-posts" aria-selected="true">Job Posts</a>
                </li>
                <!-- Additional tabs can be added here if necessary -->
            </ul>
            <a class="btn btn-primary mt-3" asp-controller="JobPosting" asp-action="Create">Add a Job Posting</a>
        </div>
    </div>
</section>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="job-posts" role="tabpanel" aria-labelledby="job-posts-tab">
        <div class="container mt-4">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@item.JobTitle</h5>
                                <p class="card-text">@item.JobDescription</p>
                                <h6 class="card-subtitle mb-2 text-muted">@item.Company</h6>
                                <h6 class="card-subtitle mb-2 text-muted">@item.Location</h6>
                                <h6>Due Date: @item.DueDate</h6>
                                <h6 class="card-subtitle mb-2 text-muted">@item.PaymentCategory</h6>
                                <a href="@item.Link" target="_blank" class="card-link">More Info</a>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" asp-controller="JobPosting" asp-action="Details" asp-route-id="@item.Id">View</a>
                                <a class="btn btn-secondary" asp-controller="JobPosting" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger" asp-controller="JobPosting" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-warning" asp-controller="JobPosting" asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div>
                <h2>@item.JobTitle</h2>
                <p>@item.JobDescription</p>
                <h6>@item.Company</h6>
                <h6>@item.Location</h6>
                <h6>Application Deadline: @item.DueDate</h6>
                <h6>@item.PaymentCategory</h6>
                <a href="@item.Link" target="_blank">@item.Link</a>
                <div>
                        <a class="btn btn-secondary" asp-controller="JobPosting" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary" asp-controller="JobPosting" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>

            </div>
            <!-- Pagination (update as necessary for your pagination logic) -->
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                    <!-- Generate page numbers dynamically based on the model data -->
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
