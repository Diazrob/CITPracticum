@model JobPosting

<h1>Are you sure you want to archive this Job Posting?</h1>

<div>
    <p><strong>Job Title:</strong> @Model.JobTitle</p>
    <p><strong>Description:</strong> @Model.JobDescription</p>
    <p><strong>Company:</strong> @Model.Company</p>
    <p><strong>Location:</strong> @Model.Location</p>
    <p><strong>Payment Type:</strong> @Model.PaymentCategory</p>
    <p><strong>Link:</strong> <a href="@Model.Link" target="_blank">@Model.Link</a></p>
</div>

<div class="form-group">
    <form asp-action="ArchiveConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-warning float-right mt-3">Confirm Archive</button>
        <a asp-action="Index" class="btn btn-outline-secondary float-right mt-3 mr-2">Cancel</a>
    </form>
</div>
