<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CITPracticum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CITPracticum.styles.css" asp-append-version="true" />
    <link href="~/fontawesome6/css/all.css" rel="stylesheet">

    <style>
        .flex-container {
            display: flex;
            height: 100vh;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
        /* Ensure the side navigation does not grow and push the content out of view */
        .side-nav {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <div class="flex-container">
        <!-- NEW Side Navigation -->
        <div class="d-flex align-items-center justify-content-center flex-column flex-shrink-0 p-3 bg-light" style="width: 225px; background: linear-gradient(10deg, #69a620, #FFFFFF, #FFFFFF);">
            <a href="/Dashboard/Index" class=" mb-3 mb-md-0 link-dark text-decoration-none">
                <img src="/images/lc.png" alt="CITPracticum Logo" style="width: 100%; height: 90px;">
            </a>
            <h4 class="mt-2">CIT Practicum</h4>
            <hr style="width: 100%;">
            <ul class="nav nav-pills flex-column mb-auto card mt-1">
                <li class="nav-item">
                    <a href="/Dashboard/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Dashboard" ? "active" : "") link-dark" aria-current="page">
                        <i class="fa-solid fa-gauge fa-lg" style="width: 1.5em;"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                @if (User.IsInRole("admin"))
                {
                    <li>
                        <a href="/Student/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Student" ? "active" : "") link-dark">
                            <i class="fa-solid fa-users fa-lg" style="width: 1.5em;"></i>
                            <span>Students</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Employer/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Employer" ? "active" : "") link-dark">
                            <i class="fa-solid fa-address-book fa-lg" style="width: 1.5em;"></i>
                            <span>Employers</span>
                        </a>
                    </li>
                }


                <li>
                    <a href="/JobPosting/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Jobs" ? "active" : "") link-dark">
                        <i class="fa-solid fa-clipboard fa-lg" style="width: 1.5em;"></i>
                        <span>Job Postings</span>
                    </a>
                </li>
                <li>
                    <a href="/PracticumForm/Index" class="nav-link @((ViewData["ActivePage"] as string) == "PracForms" ? "active" : "") link-dark">
                        <i class="fa-solid fa-file-waveform fa-lg" style="width: 1.5em;"></i>
                        <span>Practicum Forms</span>
                    </a>
                </li>
                <li>
                    <a href="/Timesheet/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Timesheet" ? "active" : "") link-dark">
                        <i class="fa-solid fa-clock fa-lg" style="width: 1.5em;"></i>
                        <span>Time Sheets</span>
                    </a>
                </li>
                @if (User.IsInRole("admin") || User.IsInRole("student"))
                {
                    <li>
                        <a href="/Documents/Index" class="nav-link @((ViewData["ActivePage"] as string) == "Documents" ? "active" : "") link-dark">
                            <i class="fa-solid fa-folder-open fa-lg" style="width: 1.5em;"></i>
                            <span>Documents</span>
                        </a>
                    </li>
                }

            </ul>
            <hr style="width: 100%;">
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle text-white" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-gear fa-lg pe-1"></i><strong>Settings</strong>
                </a>
                <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                    <li><a class="dropdown-item" href="/Student/Detail?email=@User.Identity.">Profile</a></li>
                    <form asp-area="" asp-controller="Account" asp-action="Logout">
                    <li><input type="submit" class="dropdown-item" value="Sign Out" /></li>
                    </form>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <div class="main-content">
            <div class="container mt-5">
                <main>
                    @RenderBody()
                </main>
            </div>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CITPracticum. All Rights Reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>