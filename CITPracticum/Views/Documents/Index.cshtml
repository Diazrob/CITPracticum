    <!-- Content for the Resume page -->

    <h1>Remove this</h1>

    <div class="container mt-4">
        <h1 class="my-4">Students List</h1>

        <!-- Batch upload button -->
        <form asp-controller="Student" asp-action="BatchUploadPdf" method="post" enctype="multipart/form-data">
            <input type="file" name="pdfFiles" multiple />
            <button type="submit" class="btn btn-primary">Upload Files</button>
        </form>

        <!-- Download all button -->
        <a class="btn btn-secondary" href="@Url.Action("DownloadAllPdfs")" role="button">Download All</a>

        <!-- Students table with select all feature -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col"><input type="checkbox" id="selectAll" /></th> <!-- Checkbox to select all -->
                    <th scope="col">Student Name</th>
                    <th scope="col">Individual Upload PDF</th>
                    <th scope="col">Individual Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedStudents" value="@item.Id" /></td> <!-- Checkbox for each student -->
                        <td>@item.FirstName @item.LastName</td>
                        <td>
                            <form asp-controller="Student" asp-action="UploadPdf" method="post" enctype="multipart/form-data">
                                <input type="file" name="pdfFile" />
                                <input type="hidden" name="studentId" value="@item.Id" />
                                <button type="submit" class="btn btn-primary">Upload</button>
                            </form>
                        </td>
                        <td>
                            <a class="btn btn-secondary" href="@Url.Action("DownloadPdf", new { studentId = item.Id })" role="button">Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

