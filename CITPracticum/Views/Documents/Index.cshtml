@model IEnumerable<AppUser>

<style>
    /* Primary Colors adjusted for your color scheme */
    :root {
        --primary-color: #6AADE4; /* Adjust with your primary color */
        --secondary-color: #739600; /* Adjust with your secondary color */
        --background-color: #F3F3F3; /* Adjust with your background color */
        --text-color: #62646C; /* Adjust with your text color */
        --highlight-color: #3431f4; /* Adjust with your highlight color */
    }

    body {
        font-family: 'Open Sans', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    /* ... Other styles ... */

    /* Custom styles for the navigation tabs */
    .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
        background-color: #ffffff; /* Active tab background color */
        color: var(--highlight-color); /* Active tab text color */
        border-color: #dee2e6 #dee2e6 #fff; /* Borders around the active tab */
        border-radius: 0.25rem; /* Rounded corners on the top */
    }

    .nav-link {
        color: var(--primary-color); /* Non-active tab text color */
        margin-right: 2px;
        border: 1px solid transparent;
        border-radius: 0.25rem;
    }

    .nav-tabs {
        border-bottom: 1px solid #dee2e6;
    }

</style>


div class="container mt-5">

<ul class="nav nav-tabs mb-3" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" href="@Url.Action("Resumes")">Resume</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("CoverLetters")">Cover Letter</a>
    </li>
</ul>


<div class="container mt-4">
    <h1 class="my-4">Students List</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Student Name</th>
                <th scope="col">Upload PDF</th>
                <th scope="col">Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>
                        <form asp-controller="Student" asp-action="UploadPdf" method="post" enctype="multipart/form-data">
                            <input type="file" name="pdfFile" />
                            <input type="hidden" name="studentId" value="@item.Id" />
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </form>
                    </td>
                    <td>
                        <a class="btn btn-secondary" href="@Url.Action("DownloadPdf", new { studentId = item.Id })" role="button">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>

