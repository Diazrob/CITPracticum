@model IEnumerable<AppUser>

<div class="container mt-5">
    <style>


    .nav-tabs {
        border-bottom: 1px solid #ddd;
    }

    h1 {
        color: #005157; 
    }

    .btn-primary {
        background-color: #739600; 
        border-color: #739600; 
    }

        .btn-primary:hover {
            background-color: #567d00; 
            border-color: #567d00; 
        }
   
</style>

    
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="/AdminProfile/Resumes">Resume</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/AdminProfile/CoverLetters">Cover Letter</a>
        </li>
        <li></li>
    </ul>

    

    <h1>Remove this</h1>

    <div class="container mt-4">
        <h1 class="my-4">Students List</h1>

       
        <form asp-controller="Student" asp-action="BatchUploadPdf" method="post" enctype="multipart/form-data">
            <input type="file" name="pdfFiles" multiple />
            <button type="submit" class="btn btn-primary">Upload Files</button>
        </form>

     
        <a class="btn btn-secondary" href="@Url.Action("DownloadAllPdfs")" role="button">Download All</a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col"><input type="checkbox" id="selectAll" /></th> 
                    <th scope="col">Student Name</th>
                    <th scope="col">Individual Upload PDF</th>
                    <th scope="col">Individual Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedStudents" value="@item.Id" /></td> 
                        <td>@item.FirstName @item.LastName</td>
                        <td>
                            <form asp-controller="Student" asp-action="UploadPdf" method="post" enctype="multipart/form-data">
                                <input type="file" name="pdfFile" />
                                <input type="hidden" name="studentId" value="@item.Id" />
                                <button type="submit" class="btn btn-primary">Upload</button>
                            </form>
                        </td>
                        <td>
                            <a class="btn btn-secondary" href="@Url.Action("DownloadPdf", new { studentId = item.Id })" role="button">Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

