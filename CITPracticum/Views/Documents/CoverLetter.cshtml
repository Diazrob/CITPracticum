        <table class="table">
            <thead>
                <tr>
                    <th class="name-column">Name</th>
                    <th class="view-column">Preferred</th>
                    <th class="view-column">Neutral</th>
                    <th class="view-column">Avoid</th>
                    <th class="checkbox-column">
