@model IEnumerable<Placement>
@{
    ViewData["Title"] = "Practicum Forms";
    ViewData["CurrentPage"] = "Practicum Forms > Student Submitted Forms";
}

<style>
    .table th, .table td {
        vertical-align: middle;
        text-align: left; /* Center align table headers and cells */
    }

    .table .name-column {
        text-align: left; /* Align the 'Name' column text to the left */
    }

    .table .form-column {
        width: 8%; /* Equal width for all form columns */
    }

    .table .select-all-column {
        width: 10%; /* Adjust as needed for the Select All column */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table thead {
            background-color: var(--stone-pipe-grey);
            color: white;
        }

            .table thead th {
                padding: 0.75rem 1rem;
                text-align: left;
            }

        .table tbody td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid var(--stone-pipe-grey);
        }

    .nav-tabs .nav-item:last-child {
        margin-left: auto; /* Push the button to the right */
    }
</style>

<!-- Tab navigation -->
<ul class="nav nav-tabs mb-3" role="tablist">
    <li class="nav-item">
        <a class="nav-link" href="/PracticumForm/Index">Practicum Forms</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/PracticumForm/StudentSubmittedForms">Student Submitted Forms</a>
    </li>
    <!-- This is where the 'Create Form' button is placed -->
    <li class="nav-item" role="presentation">
    </li>
</ul>

<!-- Tab content -->
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="formA" role="tabpanel" aria-labelledby="form-a-tab">
        <!-- Content for Form A -->
    </div>
    <div class="tab-pane fade" id="formB" role="tabpanel" aria-labelledby="form-b-tab">
        <!-- Content for Form B -->
    </div>
    <!-- Add additional tab contents here -->
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width: 30%;">
                <div class="d-flex">
                    <!-- Sortable link with text and icon -->
                    <a class="text-white" asp-action="StudentSubmittedForms"
                       asp-route-sortOrder="@ViewData["NameSortParm"]"
                       asp-route-nameFilter="@ViewData["CurrentNameFilter"]">
                        Name <i class="fa-solid fa-sort me-2"></i>
                    </a>
                    <!-- Filter dropdown -->
                    <div class="dropdown">
                        <a class="text-white" style="cursor: pointer;" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-filter"></i>
                        </a>
                        <div class="dropdown-menu p-4" aria-labelledby="dropdownMenuButton">
                            <div class="mb-3">
                                <form>
                                    <input type="text" class="form-control mb-2" name="nameFilter" placeholder="First name">
                                    <button class="btn btn-primary mt-3" asp-action="StudentSubmittedForms">Apply</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </th>
            <th style="width: 10%;">
                Form FOIP
            </th>
            <th style="width: 10%;">
                Form ID
            </th>
            <th style="width: 10%;">
                Form A
            </th>
            <th style="width: 10%;">
                Form B
            </th>
            <th style="width: 10%;">
                Form C
            </th>
            <th style="width: 10%;">
                Form D
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.FirstName @item.Student.LastName</td>

                @if (item.PracticumFormsId == null)

                {
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap:3px;">
                            <i class="fa-solid fa-xmark fa-lg"></i>
                        </div>
                    </td>
                }
                else
                {
                    // FormFOIP validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormFOIPId == null)
                            {
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormFOIPDetail" asp-route-id="@item.PracticumForms.FormFOIPId"><i class="fa-solid fa-check"></i> View</a>
                            }
                        </div>
                    </td>
                    // FormID validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormStuInfoId == null)
                            {
                                //Not started
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormIdDetail" asp-route-id="@item.PracticumForms.FormStuInfoId"><i class="fa-solid fa-check"></i> View</a>
                            }
                        </div>
                    </td>
                    // FormA validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormAId == null)
                            {
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormADetail" asp-route-id="@item.PracticumForms.FormAId"><i class="fa-solid fa-check"></i> View</a>
                            }
                        </div>
                    </td>
                    // FormB validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormBId == null)
                            {
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                @if (item.PracticumForms.FormB.StuSign != null && item.PracticumForms.FormB.EmpSign != null)
                                {
                                    <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormBDetail" asp-route-id="@item.PracticumForms.FormBId"><i class="fa-solid fa-check"></i> View</a>
                                }
                                else
                                {
                                    <a class="btn btn-outline-secondary" asp-controller="PracticumForm" asp-action="FormBDetail" asp-route-id="@item.PracticumForms.FormBId"><i class="fa-solid fa-hourglass-half"></i> View</a>
                                }

                            }
                        </div>
                    </td>
                    // FormC validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormCId == null)
                            {
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                @if (item.PracticumForms.FormC.StuSign != null && item.PracticumForms.FormC.SVSign != null)
                                {
                                    <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormCDetail" asp-route-id="@item.PracticumForms.FormCId"><i class="fa-solid fa-check"></i> View</a>
                                }
                                else
                                {
                                    <a class="btn btn-outline-secondary" asp-controller="PracticumForm" asp-action="FormCDetail" asp-route-id="@item.PracticumForms.FormCId"><i class="fa-solid fa-hourglass-half"></i> View</a>
                                }
                            }
                        </div>
                    </td>
                    // FormD validation
                    <td>
                        <div style="display: flex; align-items: center; justify-content:center; gap: 3px;">
                            @if (item.PracticumForms.FormDId == null)
                            {
                                <i class="fa-solid fa-xmark fa-lg"></i>
                            }
                            else
                            {
                                @if (item.PracticumForms.FormD.StuSign != null && item.PracticumForms.FormD.SVSign != null)
                                {
                                    <a class="btn btn-outline-primary" asp-controller="PracticumForm" asp-action="FormDDetail" asp-route-id="@item.PracticumForms.FormDId"><i class="fa-solid fa-check"></i> View</a>
                                }
                                else
                                {
                                    <a class="btn btn-outline-secondary" asp-controller="PracticumForm" asp-action="FormDDetail" asp-route-id="@item.PracticumForms.FormDId"><i class="fa-solid fa-hourglass-half"></i> View</a>
                                }
                            }
                        </div>
                    </td>
                }
            </tr>
        }

    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
</nav>

<!-- Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the selected items?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('select-all').addEventListener('change', function (event) {
            const checkboxes = document.querySelectorAll('.table .form-check-input');
            const isChecked = event.target.checked;

            checkboxes.forEach(function (checkbox) {
                // Skip the 'Select All' checkbox to avoid recursive checking
                if (checkbox !== event.target) {
                    checkbox.checked = isChecked;
                }
            });
        });
    });

    // Function to delete selected rows
    function deleteSelected() {
        const checkboxes = document.querySelectorAll('.table tbody .form-check-input');
        checkboxes.forEach(function (checkbox) {
            if (checkbox.checked) {
                // Assuming each checkbox is in a row that should be deleted
                checkbox.closest('tr').remove();
            }
        });
    }
</script>
