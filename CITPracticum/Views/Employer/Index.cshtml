@model IEnumerable<AppUser>

<style>
    /* Custom styles for the navigation tabs */
    .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
        background-color: #ffffff; /* Active tab background color */
        color: #3431f4; /* Active tab text color */
        border-color: #dee2e6 #dee2e6 #fff; /* Borders around the active tab */
        border-radius: 0.25rem; /* Rounded corners on the top */
    }

    .nav-link {
        color: #007bff; /* Non-active tab text color */
        margin-right: 2px; /* Spacing between tabs */
        border: 1px solid transparent; /* Transparent border for non-active tabs */
        border-radius: 0.25rem; /* Rounded corners on the top */
    }

    .nav-tabs {
        border-bottom: 1px solid #dee2e6; /* Bottom border for the whole nav */
    }

        /* Styles to align the button with the tab items */
        .nav-tabs .nav-item:last-child {
            margin-left: auto; /* Push the button to the right */
        }
</style>

    <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="job-posts-tab" data-toggle="tab" href="/Employer/Index" role="tab" aria-controls="job-posts" aria-selected="true">Employers</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Employer" asp-action="Register"><i class="fa-solid fa-plus"></i> Add Employer</a>
        </li>
    </ul>



    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Company</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.Employer != null)
                    {
                        <tr>
                            <th scope="row"><img class="img-fluid" src="https://placehold.jp/30x30.png" alt="" /></th>
                            <td>@item.Employer.FirstName @item.Employer.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.Employer.CompanyName</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Employer" asp-action="Detail" asp-route-id="@item.Employer.Id">View</a>
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Employer" asp-action="Edit" asp-route-id="@item.Employer.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Employer" asp-action="Delete" asp-route-email="@item.Email" asp-route-id="@item.Employer.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        <div class="col-lg-6 col-md-8 mx-auto">
                            <h1>There are no Employers listed.</h1>
                        </div>
                        break;
                    }

                }

            </tbody>
        </table>
    </div>