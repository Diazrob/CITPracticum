@model AppUser

@{
    ViewData["Title"] = "Employers";
    ViewData["CurrentPage"] = "Employers > Delete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Are you sure you want to delete this employer?</h1>
        <hr />
        <form method="post" asp-action="Delete" enctype="multipart/form-data">
            <div class="form-group">
                <h5>Email Address:</h5>
                <p>@Model.Employer.EmpEmail</p>
            </div>
            <div class="form-group">
                <h5>First Name:</h5>
                <p>@Model.Employer.FirstName</p>
            </div>
            <div class="form-group">
                <h5>Last Name:</h5>
                <p>@Model.Employer.LastName</p>
            </div>
            <div class="form-group">
                <h5>Company Name:</h5>
                <p>@Model.Employer.CompanyName</p>
            </div>
            <hr />
            <div class="form-group">
                <form action="Delete" method="post">
                    <input type="hidden" asp-for="Email" />
                    <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    <a class="btn btn-outline-secondary" asp-controller="Employer" asp-action="Index">Cancel</a>
                </form>
            </div>
        </form>
    </div>
</div>

