@model AppUser

<h1>Are you sure you want to delete this employer?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email">Description</label>
        <input asp-for="Email" class="form-control" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employer.FirstName">First Name</label>
        <input asp-for="Employer.FirstName" class="form-control" placeholder="FirstName">
        <span asp-validation-for="Employer.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employer.LastName">Last Name</label>
        <input asp-for="Employer.LastName" class="form-control" placeholder="LastName">
        <span asp-validation-for="Employer.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employer.CompanyName">Company</label>
        <input asp-for="Employer.CompanyName" class="form-control" placeholder="CompanyName">
        <span asp-validation-for="Employer.CompanyName" class="text-danger"></span>
    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Email" />
        <input type="hidden" name="id" value="@Model.Employer.Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
        <a class="btn btn-outline-secondary" asp-controller="Employer" asp-action="Index">Cancel</a>
    </form>
</div>